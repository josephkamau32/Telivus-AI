# Telivus AI Backend Environment Configuration

# Application Settings
DEBUG=False
SECRET_KEY=your-secret-key-change-in-production

# API Settings
API_V1_STR=/api/v1

# Server Settings
SERVER_NAME=Telivus AI Backend
SERVER_HOST=https://your-render-app.onrender.com

# Logging
LOG_LEVEL=INFO

# Vector Store (for future use)
VECTOR_DB_TYPE=chroma
CHROMA_PERSIST_DIR=./data/chroma

# OpenAI (Required for AI features)
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_MODEL=gpt-4o-mini

# Database (for future use)
DATABASE_URL=postgresql://user:password@localhost/telivus_ai

# Render-specific (auto-set by Render)
PORT=10000